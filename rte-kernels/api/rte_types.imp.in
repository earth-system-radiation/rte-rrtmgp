#pragma once

#include <cfloat>  // Ensure FLT_EPSILON and DBL_EPSILON are available
#include <cstdint>

// Define a C-compatible Boolean type
// Ensures explicit 8-bit signed type, char can be ambiguities
using Bool = std::int8_t;

// Define a floating-point type based on precision selection
// constexpr for compile-time evaluation
#ifdef @RTE_ENABLE_SP@
    using Float = float;
    constexpr Float Float_epsilon = FLT_EPSILON;
#else
    using Float = double;
    constexpr Float Float_epsilon = DBL_EPSILON;
#endif
